<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Colores base -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#5E81AC"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="#ECEFF4"/>
    <SolidColorBrush x:Key="HeaderBrush" Color="#2E3440"/>
    <SolidColorBrush x:Key="HeaderTextBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="SubHeaderTextBrush" Color="#D8DEE9"/>

    <!-- Estilos globales -->
    <Style TargetType="TextBox">
        <Setter Property="Padding" Value="10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Margin" Value="0,4,0,8"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,4,0,8"/>
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
</ResourceDictionary>

