<UserControl x:Class="PGE_T6.Views.Ej07View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="EJERCICIO 7: JUEGO DE ADIVINANZA" FontSize="20" FontWeight="Bold" Margin="0,0,0,12"/>

        <Border Grid.Row="1" Padding="20" Background="White" CornerRadius="8">
            <StackPanel>
                <TextBlock Text="¡Adivina el número!" FontSize="18" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>
                
                <TextBlock Text="He pensado en un número entre 1 y 100. ¿Puedes adivinarlo?" 
                           FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="Tu número:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="txtNumero" Width="80" TextAlignment="Center" 
                             ToolTip="Ingresa un número entre 1 y 100"
                             KeyDown="TxtNumero_KeyDown"/>
                    <Button x:Name="btnAdivinar" Content="¡Adivinar!" Margin="10,0,0,0" 
                            Click="BtnAdivinar_Click" IsDefault="True"/>
                </StackPanel>

                <Border x:Name="borderMensaje" Background="#F0F8FF" Padding="15" CornerRadius="8" 
                        Margin="0,0,0,20" Visibility="Collapsed">
                    <TextBlock x:Name="txtMensaje" FontSize="16" FontWeight="SemiBold" 
                               HorizontalAlignment="Center"/>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnNuevoJuego" Content="Nuevo Juego" 
                            Click="BtnNuevoJuego_Click" Visibility="Collapsed"/>
                    <TextBlock x:Name="txtIntentos" Margin="20,0,0,0" VerticalAlignment="Center" 
                               FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>

                <TextBlock x:Name="txtError" Foreground="Crimson" Margin="0,10,0,0" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

