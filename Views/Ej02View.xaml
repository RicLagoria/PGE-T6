<UserControl x:Class="PGE_T6.Views.Ej02View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel LastChildFill="True" Background="{StaticResource BackgroundBrush}">
        <!-- Toolbar -->
        <Border DockPanel.Dock="Top" Background="White" Padding="10" BorderThickness="0,0,0,1" BorderBrush="#DDD">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Color:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="cmbColor" Width="140" SelectedIndex="0" Margin="0,0,12,0">
                    <ComboBoxItem Content="Negro" Tag="Black"/>
                    <ComboBoxItem Content="Rojo" Tag="Red"/>
                    <ComboBoxItem Content="Verde" Tag="Green"/>
                    <ComboBoxItem Content="Azul" Tag="Blue"/>
                    <ComboBoxItem Content="Naranja" Tag="Orange"/>
                    <ComboBoxItem Content="Violeta" Tag="Purple"/>
                </ComboBox>

                <TextBlock Text="Grosor:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <Slider x:Name="sldGrosor" Minimum="1" Maximum="12" Value="3" Width="140" TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,0,12,0"/>
                <TextBlock Text="px" VerticalAlignment="Center"/>

                <Button Content="Limpiar" Click="BtnLimpiar_Click" Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Superficie de dibujo -->
        <Border Margin="10" Background="White" CornerRadius="6" BorderBrush="#DDD" BorderThickness="1">
            <Canvas x:Name="cnvDibujo"
                    Background="Transparent"
                    MouseDown="Canvas_MouseDown"
                    MouseMove="Canvas_MouseMove"
                    MouseUp="Canvas_MouseUp"/>
        </Border>
    </DockPanel>
</UserControl>

