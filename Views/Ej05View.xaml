<UserControl x:Class="PGE_T6.Views.Ej05View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="EJERCICIO 5: EDITOR DE IMÁGENES" FontSize="20" FontWeight="Bold" Margin="0,0,0,12"/>

        <!-- Panel de controles -->
        <Border Grid.Row="0" Background="White" Padding="15" CornerRadius="6" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Controles de Edición" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Cargar imagen -->
                    <Button Grid.Row="0" Grid.Column="0" Content="Cargar Imagen" Click="BtnCargar_Click" Padding="15,8" Margin="0,0,8,0"/>

                    <!-- Tamaño -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Tamaño (%):" VerticalAlignment="Center" Margin="0,8,8,0"/>
                    <Slider Grid.Row="2" Grid.Column="0" x:Name="sldTamaño" Minimum="10" Maximum="200" Value="100" TickFrequency="10" IsSnapToTickEnabled="True" Margin="0,4,8,0"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="100%" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,4,8,0"/>

                    <!-- Brillo -->
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="Brillo:" VerticalAlignment="Center" Margin="0,8,8,0"/>
                    <Slider Grid.Row="2" Grid.Column="1" x:Name="sldBrillo" Minimum="-100" Maximum="100" Value="0" TickFrequency="25" IsSnapToTickEnabled="True" Margin="0,4,8,0"/>

                    <!-- Botones de acción -->
                    <Button Grid.Row="0" Grid.Column="2" Content="Aplicar Cambios" Click="BtnAplicar_Click" Padding="15,8" Margin="8,0,0,0"/>
                    <Button Grid.Row="1" Grid.Column="2" Content="Guardar Imagen" Click="BtnGuardar_Click" Padding="15,8" Margin="8,8,0,0"/>
                    <Button Grid.Row="2" Grid.Column="2" Content="Restaurar Original" Click="BtnRestaurar_Click" Padding="15,8" Margin="8,4,0,0"/>
                </Grid>

                <TextBlock x:Name="txtInfo" Foreground="Crimson" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Área de visualización de imagen -->
        <Border Grid.Row="1" Background="White" CornerRadius="6" Padding="15">
            <ScrollViewer x:Name="svImagen" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Image x:Name="imgVisualizacion" Stretch="None"/>
            </ScrollViewer>
        </Border>

        <!-- Información de la imagen -->
        <TextBlock Grid.Row="2" x:Name="txtInfoImagen" Text="No hay imagen cargada" HorizontalAlignment="Center" Margin="0,8,0,0"/>
    </Grid>
</UserControl>

