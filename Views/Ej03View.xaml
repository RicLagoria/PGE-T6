<UserControl x:Class="PGE_T6.Views.Ej03View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="EJERCICIO 3: REGISTRO DE GASTOS" FontSize="20" FontWeight="Bold" Margin="0,0,0,12"/>

        <!-- Panel de entrada -->
        <Border Grid.Row="0" Background="White" Padding="15" CornerRadius="6" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Nuevo Gasto" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Descripción:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Grid.Row="1" Grid.Column="0" x:Name="txtDescripcion" Margin="0,4,8,0" ToolTip="Ej: Comida, Transporte..."/>

                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Valor (ARS):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtValor" Margin="0,4,8,0" ToolTip="Ej: 1500,50"/>

                    <Button Grid.Row="1" Grid.Column="2" x:Name="btnAgregar" Content="Agregar" Click="BtnAgregar_Click" Padding="15,8" VerticalAlignment="Top"/>
                </Grid>

                <TextBlock x:Name="txtError" Foreground="Crimson" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Lista de gastos -->
        <Border Grid.Row="1" Background="White" Padding="15" CornerRadius="6" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="dgGastos"
                          Grid.Row="0"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          AlternatingRowBackground="#F5F5F5"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          MaxHeight="260">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="*"/>
                        <DataGridTextColumn Header="Valor (ARS)" Binding="{Binding ValorARS, StringFormat='{}{0:C}'}" Width="140"/>
                        <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Width="160"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Fila de total en ARS -->
                <Border Grid.Row="1" Padding="8,6" Background="#FAFAFA" BorderBrush="#E5E5E5" BorderThickness="1,1,1,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="160"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Total ARS:" FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" x:Name="txtTotalARS" Text="$ 0,00" HorizontalAlignment="Right" FontWeight="Bold"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Conversión de moneda -->
        <Border Grid.Row="2" Background="White" Padding="15" CornerRadius="6">
            <StackPanel>
                <TextBlock Text="Conversión de Moneda" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Convertir a:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Grid.Column="1" x:Name="cmbMoneda" SelectedIndex="0" Margin="0,0,8,0">
                        <ComboBoxItem Content="USD - Dólar" Tag="USD"/>
                        <ComboBoxItem Content="EUR - Euro" Tag="EUR"/>
                        <ComboBoxItem Content="BRL - Real" Tag="BRL"/>
                        <ComboBoxItem Content="CLP - Peso Chileno" Tag="CLP"/>
                    </ComboBox>

                    <TextBlock Grid.Column="2" Text="Tipo de cambio:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Grid.Column="3" x:Name="txtTipoCambio" Text="1000" Margin="0,0,8,0" ToolTip="Ej: 1000 (ARS por unidad de moneda)"/>

                    <Button Grid.Column="4" x:Name="btnConvertir" Content="Convertir Total" Click="BtnConvertir_Click" Padding="15,8"/>
                </Grid>

                <TextBlock x:Name="txtTotalConvertido" FontSize="18" FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

